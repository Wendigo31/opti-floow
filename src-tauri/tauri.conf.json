{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OptiFlow - Line Optimizer",
  "version": "1.0.0",
  "identifier": "com.optiflow.lineoptimizer",
  "build": {
    "beforeDevCommand": "npm run dev -- --mode tauri",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "npm run build -- --mode tauri",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OptiFlow - Line Optimizer",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "app", "dmg", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "© 2024 OptiFlow - SAS OptiGroup",
    "category": "Business",
    "shortDescription": "Logiciel de gestion et optimisation de transport",
    "longDescription": "OptiFlow - Line Optimizer est un logiciel professionnel de calcul de coûts et d'optimisation de lignes de transport routier.",
    "createUpdaterArtifacts": false,
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": null,
      "nsis": {
        "template": null,
        "license": null,
        "headerImage": null,
        "sidebarImage": null,
        "installerIcon": null,
        "installMode": "both",
        "languages": ["French", "English"],
        "displayLanguageSelector": false
      },
      "allowDowngrades": true
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": []
      },
      "rpm": {
        "epoch": 0,
        "release": "1"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    }
  }
}
